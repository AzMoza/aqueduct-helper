{
	"name": "aqueduct-snippets",
	"displayName": "Aqueduct Snippets",
	"description": "A collection of snippets to help speed up API development with the Aqueduct framework.",
	"version": "0.0.1",
	"icon": "images/aqu-snippets.png",
	"publisher": "AzMoza",
	"repository": {
		"type": "git",
		"url": "https://github.com/AzMoza/aqueduct-snippets.git"
	},
	"bugs": {
		"url": "https://github.com/AzMoza/aqueduct-snippets/issues"
	},
	"engines": {
		"vscode": "^1.35.0"
	},
	"categories": ["Other", "Snippets"],
	"keywords": ["Dart", "API", "Aqueduct", "Flutter", "Snippets", "REST"],
	"activationEvents": [
		"onCommand:extension.aquModel",
		"onCommand:extension.aquCon"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.aquModel",
				"title": "Create a Aqueduct Model",
				"when": "editorLangId == dart"
			},
			{
				"command": "extension.aquCon",
				"title": "Create a Aqueduct Resource Controller",
				"when": "editorLangId == dart"
			}
		],
		"snippets": [
            {
                "language": "dart",
                "path": "./snippets/config.json"
            },
            {
                "language": "dart",
                "path": "./snippets/http.json"
            },
            {
                "language": "dart",
                "path": "./snippets/orm.json"
            },
            {
                "language": "dart",
                "path": "./snippets/auth.json"
            },
            {
                "language": "yaml",
                "path": "./snippets/yaml.json"
            }
        ]
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"eslint": "^5.13.0",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
